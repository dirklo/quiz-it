<main class="container">
    <section class="result_page_header">
        <h1 class="page_title">You scored: <%= @percent%>%</h1>
    </section>
    <section class="result_page_body">
        <% @results.each_with_index do |result, index| %>
            <div class="
            <% if @results[index].any?{|r| r.include?(false)} %>
                <%= 'result_card_incorrect' %>
            <% else %>
                <%= 'result_card_correct' %>
            <% end %>
            ">  
                <div class="result_card_title">
                    <h2>Question <%= index + 1%>:</h3>
                    <h4 class="score">Score: <%= @scores[index][0] %> of <%= @scores[index][1]%>    
                </div>
                <h3><%= result.first[0] %></h4>
                <br>
                <h4>You answered:</h5>
                <% result.each_with_index do |answer, i| %>
                    <div class="answer">
                        <p>
                            <h3><%= answer[1] %></h3> 
                            <%= 'Correct!' if answer[2] == true %><%= 'Incorrect...' if answer[2] == false %>  
                        </p>
                            <% if answer[3] %>
                                <p class="comment"><%= answer[3] %></p>
                            <% end %>
                    </div>
                    <% if answer[2] == false && i == result.length - 1 %>
                        <div class="corrections">
                            <p>Correct answers:</p>
                            <ul>
                                <% @correct_answers[index].each do |answer| %>
                                    <li>
                                        <%= answer.content %>
                                    </li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>
                <% end %>
            </div>
        <% end %>
    </section>
    <section class="result_page_footer">
        <a href="/users/<%= current_user.id %>">
            <button class="button-green button-lg">Return Home</button>
        </a>
    </section>
</main>

